<div class="container">
      <div class="row row-cols-1 row-cols-md-1 row-cols-lg-2 row-cols-xl-2">
          <div class="col">
            <div class="card">
              <section class="resume-card">
                <header>
                  <%= link_to resume_path(resume) do %>
                  <div class="pic">
                    <img src="https://picsum.photos/300/200/?random=10">
                  </div>
                  <% end %>
                </header>
            
                <article class="info">
                  <div class="info-header">
                    <h2><%= resume.name %></h2>
                    <span><%= resume.city %></span>
                  </div>
                  <div class="intro truncate"><%= link_to resume.intro&.truncate(75), resume_path(resume) %></div>
                </article>
            
                <footer>
                  <div class="update-time">
                    <%= format_date(resume.updated_at) %>
                  </div>
                  <div class="action">
                    <p><%= link_to '編輯', edit_resume_path(resume.id), class: 'btn' %></p>
                    <p><%= link_to '建立副本', '#', class: 'btn' %></p>
                    <p><%= link_to '刪除', resume_path(resume.id), method: 'delete', data: {confirm: 'sure?'},  class: 'btn' %></p>
                  </div>
                </footer>
              </section>
            </div>
          </div>
      </div>
  </div>